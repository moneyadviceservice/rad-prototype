<div class="secondary-filter l-secondary-filter">
  <div class="l-secondary-filter__cols">
    <h3 class="secondary-filter__heading">I need help with <span class="secondary-filter__heading-small-text">(select all that apply)</span></h3>
    <label class="secondary-filter__checkbox-text">
      <input type="checkbox" class="js-checkbox__postcode" data-target=".js-pension-slider" /> my pensions pot and savings
    </label>

    <div class="js-pension-slider secondary-filter__pensions-slider">
      <p class="secondary-filter__pension-description">is approximately:</p>

      <p class="secondary-filter__pension-total">Â£<span class="slider-target">0</span><p>
      <input type="range" value="30000" min="0" max="150000" step="5000" data-slider-target=".slider-target" />
    </div>

    <label class="secondary-filter__checkbox-text">
      <input type="checkbox" /> transferring my current or previous pensions
    </label>

    <label class="secondary-filter__checkbox-text">
      <input type="checkbox" /> long term care costs
    </label>

    <label class="secondary-filter__checkbox-text">
      <input type="checkbox" /> accessing the equity in my property
    </label>
  </div>

  <div class="l-secondary-filter__cols">
    <h3 class="secondary-filter__heading">I'd like advice</h3>

    <label class="secondary-filter__checkbox-text">
    <input type="radio" name="contact_method" class="js-checkbox__postcode" data-target=".js-filter__postcode"/> in person
    </label>
    <input type="text" class="secondary-filter__post-code js-filter__postcode" placeholder="Enter post code or town"/>

    <label class="secondary-filter__checkbox-text">
      <input type="radio" name="contact_method" data-target=""/> over the telephone
    </label>

    <label class="secondary-filter__checkbox-text">
      <input type="radio" name="contact_method" data-target=".js-filter__postcode--both"/> both in person and over the phone
    </label>

    <input type="text" class="secondary-filter__post-code js-filter__postcode--both" placeholder="Enter post code or town"/>
  </div>

  <% if display_search_results_total? %>
    <div class="l-secondary-filter__total">
      <p class="filter__total"><span class="filter__total-label js-adviser-total">0</span> matching advisers</p>
      <a class="button secondary-filter__button" href="/search_results">Review my matches</a>
    </div>
  <% end %>
</div>
